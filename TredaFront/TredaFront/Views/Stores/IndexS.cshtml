<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery.dataTables.min.js"></script>

<br />

<h5 align="center">List Stores</h5>

<p>@Html.ActionLink("Add Store", "AddStore")</p>

<script>
    $(document).ready(function () {
        $.getJSON("StoresJson", function (json) {

            var txt = "Delete";
            var txtD = "Edit Store";

            var tr;

            for (var i = 0; i < json.length; i++) {
                tr = $('<tr/>');
                tr.append("<td>" + json[i].StoreId + "</td>");
                tr.append("<td>" + json[i].StoreName + "</td>");
                tr.append("<td>" + json[i].OpeningDate + "</td>");
                tr.append("<td>" + txt.link("http://localhost:51402/Stores/Delete/" + json[i].StoreId) + "</td>");
                tr.append("<td>" + txtD.link("http://localhost:51402/Stores/Edit/" + json[i].StoreId) + "</td>");
                $('table').append(tr);
            }
            $('#Store').DataTable({
                "lengthMenu": [[6, 10, 25, 50, -1], [6, 10, 25, 50, "All"]]
            });
        });

    });
</script>

<hr />
<div class="form-horizontal">
    <table id="Store" class="table table-bordered  table-hover">
        <thead>
            <tr>
                <th>Store Id</th>
                <th>Store Name</th>
                <th>Openin Date</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>